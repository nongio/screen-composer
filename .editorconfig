root = true

[*]
charset = utf-8
end_of_line = lf

[*.{c,h,cmake,txt}]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = 4
max_line_length = 100
trim_trailing_whitespace = true
insert_final_newline = true

[*.{xml,yml}]
indent_style = space
indent_size = 2

[config]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false
